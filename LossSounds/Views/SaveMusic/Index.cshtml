@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/SaveMusic/SaveMusic.css")

@using (Html.BeginForm("ObtenerMetadatosCancion", "SaveMusic", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="general__contenido__novedades">
        <div>
            <h2 class="head">Cargar Archivo de Música</h2>
        </div>
        <div class="form-group">
            <br />
            <label for="archivo">Selecciona un archivo de música:</label>
            <input type="text" name="archivo" id="archivo" class="archivo" accept=".flac" required />
            <br /><br />
            <button type="submit" class="meta">Guradar Metadatos</button>
        </div>

    </div>
}